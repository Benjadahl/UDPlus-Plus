{
  "manifest_version": 2,

  "name": "Uddata++",
  "description": "An extension that makes the experience of using uddata+ better",
  "version": "0.1",
  "options_ui":{
	 "page": "./options/options.html",
     "chrome_style": true
  },
  "permissions": [
      "activeTab",
	    "storage"
  ],
  "background":{
    "scripts":["background.js"]
  },
  "content_scripts": [
    {
      "matches":[
        "http://www.uddataplus.dk/*",
        "https://www.uddataplus.dk/*"
      ],
      "js": ["jquery-3.1.0.min.js","UD++Functions.js","main.js","themes.js"],
      "run_at": "document_end"
    },
    {
      "matches":[
        "http://www.uddataplus.dk/opgave/*",
        "https://www.uddataplus.dk/opgave/*"
      ],
      "js": ["jquery-3.1.0.min.js","./pageScripts/assignmentPage.js"],
      "run_at": "document_end"
    },
    {
      "matches":[
        "http://www.uddataplus.dk/ressourcer/*",
        "https://www.uddataplus.dk/ressourcer/*"
      ],
      "js": ["jquery-3.1.0.min.js","./pageScripts/resources.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["UddataLogo.png", "UD++Functions.js", "settings.html"]
}
